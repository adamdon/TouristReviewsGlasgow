<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reviewpage"
    tools:context="uk.ac.cityofglasgowcollege.gccadamdon.Review">

    <ImageButton
        android:id="@+id/btnTitleHome"
        android:layout_width="97dp"
        android:layout_height="63dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="@null"
        android:onClick="goToActivityHomeOne"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/titlebar_home_non_clicked"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ImageButton
        android:id="@+id/btnTitlePlaces"
        android:layout_width="99dp"
        android:layout_height="65dp"
        android:layout_x="97dp"
        android:layout_y="0dp"
        android:background="@null"
        android:onClick="goToActivityPlaces"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/titlebar_places_clicked"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ImageButton
        android:id="@+id/btnTitleSettings"
        android:layout_width="99dp"
        android:layout_height="63dp"
        android:layout_x="196dp"
        android:layout_y="0dp"
        android:background="@null"
        android:onClick="goToActivitySettings"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/titlebar_settings_non_clicked"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ImageButton
        android:id="@+id/btnTitleDots"
        android:layout_width="91dp"
        android:layout_height="63dp"
        android:layout_x="295dp"
        android:layout_y="0dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/titlebar_contextdots_non_clicked"
        tools:layout_editor_absoluteX="292dp"
        tools:layout_editor_absoluteY="-1dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="256dp"
        android:layout_height="142dp"
        android:layout_x="63dp"
        android:layout_y="264dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lblMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="52dp"
        android:layout_y="425dp"
        android:text="Reviews will be moderated before submission"
        tools:text="Reviews will be moderated before submission" />

    <Button
        android:id="@+id/btnPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="145dp"
        android:layout_y="464dp"
        android:onClick="goToActivityPlaces"
        android:text="Submit" />

</AbsoluteLayout>
