<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_page"
    tools:context="uk.ac.cityofglasgowcollege.gccadamdon.Register">

    <ImageButton
        android:id="@+id/btnTitleHome"
        android:layout_width="97dp"
        android:layout_height="63dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="@null"
        android:onClick="goToActivityHomeOne"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/titlebar_home_non_clicked"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ImageButton
        android:id="@+id/btnTitlePlaces"
        android:layout_width="99dp"
        android:layout_height="63dp"
        android:layout_x="97dp"
        android:layout_y="0dp"
        android:background="@null"
        android:onClick="goToActivityPlaces"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/titlebar_places_non_clicked"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ImageButton
        android:id="@+id/btnTitleSettings"
        android:layout_width="99dp"
        android:layout_height="65dp"
        android:layout_x="196dp"
        android:layout_y="0dp"
        android:background="@null"
        android:onClick="goToActivitySettings"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/titlebar_settings_clicked"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ImageButton
        android:id="@+id/btnTitleDots"
        android:layout_width="91dp"
        android:layout_height="63dp"
        android:layout_x="295dp"
        android:layout_y="0dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/titlebar_contextdots_non_clicked"
        tools:layout_editor_absoluteX="292dp"
        tools:layout_editor_absoluteY="-1dp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="51dp"
        android:layout_y="258dp"
        android:text="Email:"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="116dp"
        android:layout_y="246dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="303dp"
        android:text="Username:"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_x="151dp"
        android:layout_y="291dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_x="157dp"
        android:layout_y="336dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="48dp"
        android:layout_y="465dp"
        android:onClick="goToMainActivity"
        android:text="Back to Login" />

    <TextView
        android:id="@+id/lblMessage"
        android:layout_width="353dp"
        android:layout_height="36dp"
        android:layout_x="18dp"
        android:layout_y="518dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="51dp"
        android:layout_y="349dp"
        android:text="Password"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="186dp"
        android:layout_y="466dp"
        android:onClick="registerNewPerson"
        android:text="Register detalis" />
</AbsoluteLayout>
